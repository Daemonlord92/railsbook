<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Railsbook Alert", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Railsbook Error", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Railsbook Notification", sticky: false) %>
<% end %>